#include <iostream> 
#include <string>
using namespace std;

struct Student {
    string name;
    int roll;
    float marks[5];
    float total;
    float average;
    char grade;
};

void calculate(Student &s) {
    s.total = 0;
    for (int i = 0; i < 5; i++) {
        s.total += s.marks[i];
    }
    s.average = s.total / 5;

    if (s.average >= 90) s.grade = 'A';
    else if (s.average >= 75) s.grade = 'B';
    else if (s.average >= 60) s.grade = 'C';
    else if (s.average >= 40) s.grade = 'D';
    else s.grade = 'F';
}

int main() {
    Student s;

    cout << "=== Student Report Card ===\n";
    cout << "Enter student name: ";
    getline(cin, s.name);
    cout << "Enter roll number: ";
    cin >> s.roll;

    cout << "Enter marks for 5 subjects:\n";
    for (int i = 0; i < 5; i++) {
        cout << "Subject " << i + 1 << ": ";
        cin >> s.marks[i];
    }

    calculate(s);

    cout << "\n=== Report Card ===\n";
    cout << "Name: " << s.name << "\n";
    cout << "Roll No: " << s.roll << "\n";
    cout << "Total Marks: " << s.total << "\n";
    cout << "Average: " << s.average << "\n";
    cout << "Grade: " << s.grade << "\n";

    return 0;
}
